        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Database size:"
            android:id="@+id/size_show" />

        <TextView
            android:id="@+id/size_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#88ff2600"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Data:(last 30 vectors)"
            android:id="@+id/data_show" />

        <TextView
            android:id="@+id/data_result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:textSize="13sp"
            android:textColor="#8800a6ff"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    </LinearLayout>

